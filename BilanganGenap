import java.util.*;

public class BilanganGenap
{
	public static void main (String [] args)
	{
		Scanner ea = new Scanner (System.in);
		System.out.print ("Jumlah Bilangan Genap : ");
		
		int a = ea.nextInt ();
		int b=0;
		int bilGenap = 0;
		while (b<a)
		{
			System.out.println ("Bilangan Genap ke : " +b+ " = " +bilGenap);
			bilGenap +=2;
			b++;
		}
	}
}
